<div id="page-login">
    <header class="header">
        <div class="header-item logo"><h1><b>Chat</b>App!</h1></div>
        <div class="header-center">&nbsp;</div>
        <div class="header-item"><a class="btn-link" href="/join">Join Chat</a></div>
    </header>
    <div class="login">
        <form method="post" action="/">
        <div id="usernameField" class="form-control">
            <div class="userinput">
                <h3 class="title">What's your nickname?</h3>
                <input id="usernameInput" class="username-input"
                       type="text"
                       name="username"
                       required
                />
            </div>
            <div><button id="usernameBtn" class="btn">Continue</button></div>
        </div>
        <div id="emailField" class="form-control">
            <div class="userinput">
                <h3 class="title">What's your email address?</h3>
                <input id="emailInput" class="username-input"
                       type="text"
                       name="email"
                       required
                />
            </div>
            <div class="login-email-buttons"><button type="submit" id="emailBtn" class="btn">Create New Room</button><button id="joinBtn" class="btn-link">or, join existing room</button></div>
        </div>
        </form>
    </div>
</div>
